{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Corral X in Edge (file)",
            // Abre directamente el archivo `index.html` en Edge
            "runtimeExecutable": "C:\\Program Files (x86)\\Microsoft\\Edge\\Application\\msedge.exe",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Edge (with remote debugging)",
            // Lanza Edge con puerto de depuraci√≥n remoto para permitir attach
            "runtimeExecutable": "C:\\Program Files (x86)\\Microsoft\\Edge\\Application\\msedge.exe",
            "file": "${workspaceFolder}/index.html",
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "--user-data-dir=${workspaceFolder}\\.vscode\\edge-profile"
            ],
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "pwa-msedge",
            "request": "attach",
            "name": "Attach to Edge (pwa-msedge)",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "msedge",
            "request": "attach",
            "name": "Attach to Edge (msedge)",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        }
    ]
}